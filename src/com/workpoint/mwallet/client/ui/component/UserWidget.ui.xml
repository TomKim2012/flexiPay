<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d='urn:import:com.workpoint.mwallet.client.ui.component'>

	<d:BulletListPanel styleName="dropdown-menu"
		ui:field="divPanelContainer" >
		<d:BulletPanel>
			<g:HTMLPanel styleName="user-details row-fluid">
				<span class="span1">
					<g:Image ui:field="img" />
					<!-- img class="" data-src="img/blueman.png" src="img/blueman.png" width="70px" 
						height="90px"/ -->
				</span>
				<span class="span2">
					<span class="text" ui:field="spnUserPull"></span>
					<br />
					<span class="ellipsis label visible-desktop" style="width: 90%;"
						ui:field="spnUserGroup"></span>
				</span>
			</g:HTMLPanel>
		</d:BulletPanel>
		
		<d:BulletPanel>
			<g:HTMLPanel styleName="action-area">
				<div class="version visible-desktop" ui:field="spnVersion"></div>
				<g:Anchor styleName="btn btn-primary" ui:field="aProfile"
					href="#home;page=profile">View Profile</g:Anchor>
				<g:Anchor styleName="btn pull-right" ui:field="aLogout">Logout</g:Anchor>
			</g:HTMLPanel>
		</d:BulletPanel>
		
	</d:BulletListPanel>
</ui:UiBinder> 